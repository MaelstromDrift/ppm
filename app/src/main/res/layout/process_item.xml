<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/processImage"
        android:contentDescription="test_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/processTitle"
        android:text="Default Title"
        tools:layout_constraintTop_creator="1"
        android:layout_margin="6dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/processImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/processDescription"
        android:text="Lorum Ipsum"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/processTitle"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/processImage"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/process_list_status"
        android:text="status"
        android:layout_margin="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDate"
        android:text="00/00/0000"

        tools:layout_constraintBottom_creator="1"
        app:layout_constraintTop_toBottomOf="@id/process_list_status"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="6dp"
        android:textAlignment="textEnd" />

</android.support.constraint.ConstraintLayout>